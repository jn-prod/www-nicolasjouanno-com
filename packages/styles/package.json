    "lint": "run-s lint:stylelint lint:prettier",
    "lint:fix": "run-s lint:stylelint:fix lint:prettier:fix",
    "lint:stylelint": "stylelint \"./src/**/*.scss\"",
    "lint:stylelint:fix": "stylelint \"./src/**/*.scss\" --fix",
    "lint:prettier": "prettier --check **/*.{scss,html}",
    "lint:prettier:fix": "prettier --write **/*.{scss,html}"

  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "sass": "latest",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  },

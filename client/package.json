{
  "name": "client-boilerplate",
  "version": "1.0.0",
  "description": "ðŸš€ this client boilerplate include: Webpack, ES6+, typescript, babel, eslint, prettier, SASS, jest.",
  "main": "dist/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "npm run build:dev",
    "dev": "webpack-dev-server --env dev --mode none",
    "build": "webpack --env prod --mode production",
    "lint": "run-s lint:es lint:prettier",
    "lint:fix": "run-s lint:es:fix lint:prettier:fix",
    "lint:es": "eslint src/**/*.{js,ts,tsx}",
    "lint:es:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "lint:prettier": "prettier --check **/*.{js,ts,tsx,scss,html,mdx,json}",
    "lint:prettier:fix": "prettier --write **/*.{js,ts,tsx,scss,html,mdx,json}",
    "test": "jest --coverage"
  },
  "author": "mwieth",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^8.6.0",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.5.1",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^3.2.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-jsdoc": "^39.2.7",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^2.1.5",
    "prettier": "2.6.2",
    "sass-loader": "^7.0.2",
    "style-loader": "^0.21.0",
    "ts-loader": "^6.2.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },

---
layout: null
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.title | escape }}",
  "home_page_url": "{{ site.url }}",
  "feed_url": "{{ site.url }}/feed.json",
  "description": "{{ site.headline | escape }}",
  "language": "fr",
  "author": {
    "name": "{{ site.author.name | escape }}",
    "url": "{{ site.url }}",
    "avatar": "{{ site.url }}/{{ site.author.avatar }}"
  },
  "items": [
    {% for post in site.posts limit:10 %}
    {
      "id": "{{ site.url }}{{ post.url }}",
      "url": "{{ site.url }}{{ post.url }}",
      "title": {{ post.title | jsonify }},
      "content_html": {{ post.content | jsonify }},
      "summary": {{ post.excerpt | strip_html | truncatewords: 50 | jsonify }},
      "date_published": "{{ post.date | date_to_xmlschema }}",
      {% if post.last_modified_at %}
      "date_modified": "{{ post.last_modified_at | date_to_xmlschema }}",
      {% endif %}
      {% if post.images and post.images.size > 0 %}
      "image": "{{ site.url }}{{ post.images[0] }}",
      {% endif %}
      "tags": [{% for tag in post.tags %}{{ tag | jsonify }}{% if forloop.last == false %}, {% endif %}{% endfor %}]
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
